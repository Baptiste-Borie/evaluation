{% extends 'base.html.twig' %}

{% block title %}Ressources{% endblock %}

{% block body %}
    <h1>Liste des ressources</h1>

    <a href="{{ path('app_ressource_new') }}" class="btn btn-primary mb-3">➕ Ajouter une ressource</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Intitulé</th>
                <th>Étape</th>
                <th>Nature</th>
                <th>Support</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.id }}</td>
                <td>{{ ressource.intitule }}</td>
                <td>{{ ressource.etape.descriptif }}</td>
                <td>{{ ressource.nature }}</td>
                <td>{{ ressource.support }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune ressource trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
