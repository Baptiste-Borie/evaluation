<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}JobStep!{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}{% endblock %}
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">JobStep</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_message_inbox') }}">üì• Bo√Æte de r√©ception</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_parcours_index') }}">Parcours</a>
                        </li>
                        
                    {% endif %}
                    {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_CONSEILLER' in app.user.roles) %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ressource_index') }}">üìö Ressource</a>
                        </li>
                    {% endif %}
                </ul>

                <div class="d-flex">
                    {% if app.user %}
                        <div class="dropdown">
                            <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                {{ app.user.firstname ~ ' ' ~ app.user.lastname }}
                                {% if 'ROLE_ADMIN' in app.user.roles %} üëë{% endif %}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('admin_user_edit', { id: app.user.id }) }}">Mon profil</a></li>
                                {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                                    <li><a class="dropdown-item" href="{{ path('app_admin_user') }}">Tous les utilisateurs</a></li>
                                {% endif %}
                                <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">üö™ D√©connexion</a></li>
                            </ul>
                        </div>
                    {% else %}
                        <a class="btn btn-outline-light" href="{{ path('app_login') }}">Connexion</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>
</header>

<main class="container">
    {% block body %}{% endblock %}
</main>

{% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
{% endblock %}
</body>
</html>
