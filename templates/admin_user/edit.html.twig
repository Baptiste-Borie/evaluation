{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <h1>Modifier {{ user.email }}</h1>

    {{ form_start(form) }}
        <div class="mb-3 ">
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.userType) }}
            {{ form_row(form.roles) }}
        </div>
        <button type="submit" class="btn btn-success">Enregistrer</button>
        <a href="{{ path('app_admin_user') }}" class="btn btn-secondary">Retour</a>
    {{ form_end(form) }}
{% endblock %}
